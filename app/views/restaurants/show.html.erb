<h1> <%= @restaurant.name %> </h1>

<h4> <%= @restaurant.address %> </h4>
<h4> <%= @restaurant.phone_number %> </h4>
<h4> <%= @restaurant.category %> </h4>
<h2> Reviews </h2>
<h3> <% @restaurant.reviews.each do |review| %></h3>
      <h4> <%= review.rating %> - <%= review.content %></h4>
<h4> <% end %></h4>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Leave review", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back', restaurant_path(@restaurant) %>
<%= link_to 'Back to Home', restaurants_path %>
